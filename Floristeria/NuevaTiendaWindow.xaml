<Window x:Class="Floristeria.NuevaTiendaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Floristeria"
        mc:Ignorable="d"
        Title="Nueva tienda" Height="130" Width="400" WindowStartupLocation="CenterOwner" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <StackPanel FocusManager.FocusedElement="{Binding ElementName=nombreTienda}">
            <Label Content="Nombre tienda" />
            <TextBox x:Name="nombreTienda" ></TextBox>
            <Button Content="Crear" Click="btnCrearTienda_Click" Width="100" />
        </StackPanel>
    </Grid>
</Window>
